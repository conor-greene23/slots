//draw function 
draw = function() {
     
//background
background(0, 0, 0);

//for loop to draw stars in back 
for (var i = 0; i < 10; i++) {
    fill(255, 255, 255);
    rect(random(1,384),random(1,386), 5, 5);
}

// if statement to switch between sceenes
if (currentScene === 0) {
    splashScreen(); //calls start scene 
    }
if (currentScene === 1) {
    gameScreen(); //calls game scene
    //draws the random 
    checkTL();
    checkTM();
    checkTR();
    checkML();
    checkMM();
    checkMR();
    checkBL();
    checkBM();
    checkBR();
    drawScore();
     checkWin();
     
    }
if (currentScene === 2) {
    howToPlayScreen(); //calls how to play scene
    }   
if (currentScene === 3) {
    disclaimersScreen(); //calls disclaimers scene 
    }
    if(currentScene === 5){
        endSceen();
    }
    checkEnd();
    
};

