draw= function() {
    checkTL();
    checkTM();
    checkTR();
    checkML();
    checkMM();
    checkMR();
    checkBL();
    checkBM();
    checkBR();
    drawScore();
};

mouseClicked = function() {
    if(spinButton.isMouseInside()){
       yesSpin = true;
        tL = round(random(1,6)); 
        tM = round(random(1,6));
        tR = round(random(1,6)); 
        mL = round(random(1,6));
        mM = round(random(1,6)); 
        mR = round(random(1,6));
        bL = round(random(1,6)); 
        bM = round(random(1,6));
        bR = round(random(1,6));
        checkWin();
        addScore = true;
    }
    
};


