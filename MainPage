//Amir's bitmoji code
var head=function(x,y,bodH){
  
noStroke();
 //lefthair
    fill(10, 10, 10);
    quad(x+(bodH/328*145),y-(bodH/328*22),x+(bodH/328*83),y+(bodH/328*14),x+(bodH/328*61),y-(bodH/328*29),x+(bodH/328*67),y-(bodH/328*30));
//righthair
    fill(10, 10, 10);
    quad(x+(bodH/328*168),y-(bodH/328*26),x+(bodH/328*147),y+(bodH/328*15),x+(bodH/328*142),y-(bodH/328*22),x+(bodH/328*120),y-(bodH/328*30));
//head
    fill(163,116,68);
    ellipse (x+(bodH/328*114),y+(bodH/328*1),(bodH/328*65),(bodH/328*98));
//hat
    fill(173, 171, 171);
    bezier(x+(bodH/328*86),y+(bodH/328*-26),x+(bodH/328*82),y-(bodH/328*89),x+(bodH/328*156),y-(bodH/328*64),x+(bodH/328*143),y-(bodH/328*26));
    fill(207, 12, 12);
    textSize((bodH/328*21));
    text("B",x+(bodH/328*108),y-(bodH/328*42));
    line(x+(bodH/328*81),y-(bodH/328*25),x+(bodH/328*143),y-(bodH/328*26));

//nose
    fill	(163,116,68);
    arc(x+(bodH/328*114),y+(bodH/328*8),(bodH/328*17),(bodH/328*13),(bodH/328*-30),(bodH/328*328));
    fill(5, 4, 4);
    ellipse(x+(bodH/328*111),y+(bodH/328*11),(bodH/328*3),(bodH/328*3));//left nose hole
    ellipse(x+(bodH/328*119),y+(bodH/328*11),(bodH/328*3),(bodH/328*3));//right nose hole
//mouth
    fill(255, 255, 255);
    arc(x+(bodH/328*113),y+(bodH/328*26),(bodH/328*17),(bodH/328*24),-14,194);
    fill(235, 181, 184);
    arc(x+(bodH/328*113),y+(bodH/328*26),(bodH/328*17),(bodH/328*10),-196,25);//upperlip
    arc(x+(bodH/328*114),y+(bodH/328*33),(bodH/328*17),(bodH/328*10),-30,194);//lowerlip


//righteye
    fill(0, 0, 0);
    rect(x+(bodH/328*93),y-(bodH/328*17),(bodH/328*40),(bodH/328*3));//eyebrow
    fill (247, 244, 244);
    ellipse(x+(bodH/328*101),y-(bodH/328*6),(bodH/328*11),(bodH/328*12)); 
//lefteye
    fill (247, 244, 244);
    ellipse(x+(bodH/328*127),y-(bodH/328*6),(bodH/328*11),(bodH/328*12));

//leftpupil
    fill(107, 55, 0);
    ellipse(x+(bodH/328*101),y-(bodH/328*6),(bodH/328*7),(bodH/328*7));
    fill(13,13,13);
    ellipse(x+(bodH/328*101),y-(bodH/328*6),(bodH/328*1),(bodH/328*-2));
//rightpupil
    fill(107, 55, 0);
    ellipse(x+(bodH/328*127),y-(bodH/328*6),(bodH/328*7),(bodH/328*7));
    fill(13, 13, 13);
    ellipse(x+(bodH/328*127),y-(bodH/328*6),(bodH/328*1),(bodH/328*-2));   
    
};
