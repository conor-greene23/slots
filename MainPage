var yesSpin = false;
var tL = 0;
var tM = 0;
var tR = 0;
var mL = 0;
var mM = 0;
var mR = 0;
var bR = 0;
var bM = 0;
var bL = 0;
var score=5;
var addScore = false;

//button Constructor
var Button = function(config){
    this.x = config.x || 0;
    this.y = config.y || 0;
    this.width = config.width || 150;
    this.height = config.height || 50;
    this.label = config.label || "Click";
};

//draw button prototype
Button.prototype.draw = function() {
    fill(0, 234, 255);
    rect(this.x, this.y, this.width, this.height, 5);
    fill(0, 0, 0);
    textSize(19);
    //textAlign(LEFT, TOP);
    text(this.label, this.x+23, this.y+this.height/1.5);
};

//checks to see if mouse is inside button
Button.prototype.isMouseInside = function() {
    return mouseX > this.x &&
           mouseX < (this.x + this.width) &&
           mouseY > this.y &&
           mouseY < (this.y + this.height);
};

//spin button
var spinButton = new Button ({
    x:150,
    y:318,
    width:80,
    label:"spin"
});

var checkWin = function(){
if(addScore){
    if(tL === tM && tM === tR){
        score= score-1;
        addScore=false;
    }
    else{
    score=score-1;
    addScore = false;
    }
}
};

var drawScore = function(){
    noStroke();
    fill(255, 255, 255);
    rect(298,320,81,33);
    fill(255, 0, 0);
    fill(0, 0, 0);
    textSize(20);
    text("Coins: "+score, 301,348);
};
//draws the tiles and the score
var scene = function(){
for(var i = 0; i < 3; i++){
    for(var x = 0; x < 3; x++){
    rect(x*80+81,i*100+0,79,100);}
}
};

//Scene of the game
var gameScene = function(){
scene();
spinButton.draw();
};
gameScene();

//checks to see which picture to draw
var checkTL = function(){
if(yesSpin){
    fill(255, 255, 255);
    if(tL === 1){
    rect(81,0,79,100);
    image(getImage("cute/CharacterBoy"), 100, -9, 50, 100);
    }
    if(tL === 2){
    rect(81,0,79,100);
    image(getImage("avatars/duskpin-seed"), 100, -9, 50, 100);  
    }
     if(tL === 3){
     rect(81,0,79,100);
    image(getImage("avatars/aqualine-seed"), 100, -9, 50, 100);
    }
     if(tL === 4){
      rect(81,0,79,100);
    image(getImage("avatars/leafers-seed"), 100, -9, 50, 100);
    }
     if(tL === 5){
     rect(81,0,79,100);      
