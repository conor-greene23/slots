//checks to see if they should add a coin
var checkWin = function(){
if(addScore){
    if(tL === tM && tM === tR){
        score= score+2;
        addScore=false;
    }
    if(mL === mM && mM === mR){
        score= score+5;
        addScore=false;
    }
    if(bL === bM && bM === bR){
        score= score+3;
        addScore=false;
    }
    if(tL === mM && mM === bR){
        score= score+4;
        addScore=false;
    }
    if(bL === mM && mM === tR){
        score= score+2;
        addScore=false;
    }
    if(tL === mL && mL === bL){
        score= score+1;
        addScore=false;
    }
    if(tM === mM && mM === bM){
        score= score+3;
        addScore=false;
    }
    if(tR === mR && mR === bR){
        score= score+3;
        addScore=false;
    }
    else{
  addScore = false;
    }
}
};

//checks to see if they should take a way coin
var checkEnd = function(){
if (score === 0){
    currentScene = 5;
}
};
//draws the score on screen
var drawScore = function(){
    noStroke();
    fill(255, 255, 255);
    rect(8,357,122,33);
    fill(255, 0, 0);
    fill(0, 0, 0);
    textSize(20);
    text("Coins: "+score, 11,363);
};
//draws the tiles and the score
var scene = function(){
for(var i = 0; i < 3; i++){
    for(var x = 0; x < 3; x++){
    stroke(255, 0, 0);
    fill(255, 255, 255,0);
    rect(x*80+81,i*100+0,79,100);}
}
};

